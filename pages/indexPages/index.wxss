page {
    background-color: #f2f2f2;
}
.index-header {
    width: 100%;
    height: 200rpx;
    background-color: #dc2f37;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.index-logo {
    width: 400rpx;
    height: 100rpx;
}
.search-box input {
    width: 400rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    font-size: 26rpx;
    text-align: center;
    display: inline-block;
    margin: 20rpx 0;
}
.index-content {
    padding: 20rpx 0 196rpx 0;
}
.index-content-title {
    line-height: 60rpx;
    padding-left: 20rpx;
}
.shopping-content {
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}
.shopping-list {
    width: 50%;
    padding: 0 20rpx;
    margin-right: 1.5%;
    background-color: #ffffff;
    padding: 20rpx;
}
.shopping-list image {
    width: 100%;
    height: 250rpx;
}
.shopping-list text {
    line-height: 40rpx;
    font-size: 26rpx;
}
