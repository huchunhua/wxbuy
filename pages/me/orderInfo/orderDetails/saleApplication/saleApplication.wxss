page {
    background-color: #f2f2f2;
}
.fight-groups {
    display: flex;
    flex-direction: row;
    padding: 20rpx 24rpx;
    background-color: #ffffff;
}
.fight-groups image {
    width: 40%;
    height: 150rpx;
    margin-right: 20rpx;
}
.shopping-info-words, .apply-box, .describe-box, .up-box {
    display: flex;
    flex-direction: column;
}
.sale-words {
    font-size: 26rpx;
    color: #999999;
}
.apply-box, .apply-num, .describe-box, .up-box {
    background-color: #ffffff;
    padding: 20rpx 24rpx;
    margin-bottom: 20rpx;
}
.apply-box {
    margin-top: 20rpx;
}
.apply-button, .apply-num {
    display: flex;
    flex-direction: row;
}
.apply-button text {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    border: 1px solid #dddddd;
    text-align: center;
    margin-right: 40rpx;
    margin-top: 10rpx;
    font-size: 24rpx;
}
.apply-button .act {
    border: 1px solid #ff3333;
    color: #ff3333;
}
.this-num {
    width: 50rpx!important;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border: 1px solid #dddddd;
    display: inline-block;
}
.apply-num-title {
    display: inline-block;
    line-height: 50rpx;
    margin-right: 80rpx;
}
.describe-title {
    border-bottom: 1px solid #f2f2f2;
    line-height: 60rpx;
}
.describe-words {
    width: 100%;
    height: 160rpx;
    padding: 20rpx 0;
    font-size: 24rpx;
    word-wrap: break-word;
    line-height: 50rpx;
    text-align: justify;
}
.describe-content {
    position: relative;
}
.describe-num {
    position: absolute;
    right: 24rpx;
    font-size: 24rpx;
    bottom: 20rpx;
    color: #999999;
}
.up-picture {
    padding-top: 20rpx;
}
.up-picture image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}
.up-tip {
    font-size: 24rpx;
    color: #999999;
    margin-top: 10rpx;
}
.ensure-up {
    width: 96%;
    margin: 50rpx 0 0 2%;
    padding-bottom: 80rpx;
}
.ensure-up button {
    background-color: #ff3333;
    color: #ffffff;
    border-radius: 0;
    font-size: 30rpx;
    height: 70rpx;
    line-height: 70rpx;
}