page {
    background-color: #f2f2f2;
}
.goods-info {
    display: flex;
    flex-direction: column;
    padding: 20rpx 24rpx;
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    margin-bottom: 20rpx;
}
 .goods-info view text {
    line-height: 50rpx;
    color: #4a4a4a;
} 
.inquiry-content {
    background-color: #ffffff;
    padding: 20rpx 0 0 60rpx;
}
.inquiry-list {
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-bottom: 20rpx;
    
}
.inquiry-img image {
    margin-right: 30rpx;
    vertical-align: middle;
}
.inquiry-list view text {
    padding-top: 10rpx;
}
.inquiry-img {
    width: 10%;
}
.inquiry-words {
    width: 90%;
}
.line-row {
    color: #999999;
    display: inline-block;
    font-size: 24rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #f2f2f2;
    width: 100%;
}
.inquiry-list .inquiry-info {
    display: -webkit-box; 
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
.logistics-select {
    width: 28rpx;
    height: 77rpx;
    margin-top: 18rpx;
}
.logistics {
    width: 28rpx;
    height: 128rpx;
    margin-top: -35rpx;
}