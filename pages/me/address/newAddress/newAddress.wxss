.new-address-box {
    padding: 20rpx 24rpx;
}
.new-address-list {
    display: flex;
    flex-direction: row;
    line-height: 98rpx;
    height: 98rpx;
    border-bottom: 1px solid #f2f2f2;
}
.new-address-list input {
    margin-left: 10rpx;
    height: 94rpx;
    line-height: 94rpx;
    width: 78%;
    margin-left: 20%;
}
.new-address-list text {
    font-size: 28rpx;
    color: #333333;
}
.new-address-title {
    width: 20%;
    text-align: right;
}
.choice-address {
    display: flex;
    flex-direction: row;
    position: absolute;
    right: 24rpx;
    width: 78%;
}
.add-address-box {
    width: 100%;
    background-color: #ff3333;
    height: 78rpx;
    text-align: center;
    position: relative;
    margin-top: 150rpx;
    
}
.add-address-box text {
    color: #ffffff;
    width: 100%;
    text-align: center;
    display: inline-block;
    position: relative!important;
    font-size: 30rpx;
    line-height: 78rpx;
    margin-top: 0;
}
/* 插件样式 */
.infoText {
    /* line-height: 98rpx; */
    margin-left: 3%;
}
picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ----------------------------------------- */
.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}

.animation-button {
  width: 100%;
  height: 98rpx; 
  line-height: 98rpx; 
  align-items: center;
  background-color: #ffffff;
  border: 1px solid #ffffff;
  position: absolute;
  left: 0;
}


text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.left-bt{
  left: 30rpx;
}
.right-bt {
  right: 30rpx;
}

.line{
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx; 
  background-color: #eeeeee;
}