page {
    background-color: #f2f2f2;
}
.me-info {
    height: 340rpx;
    display: flex;
    flex-direction: column;
    text-align: center;
    background-color: #ffffff;
}
.me-phone {
    width: 160rpx!important;
    height: 160rpx!important;
    border-radius: 50%;
    margin: 20rpx auto;
}
.me-info text {
    line-height: 50rpx;
    font-weight: 700;
}
.me-info .wechat {
    font-size: 24rpx;
    width: 200rpx;
    padding: 0 10rpx;
    background-color: #eeeeee;
    border-radius: 25rpx;
    display: inline-block;
    margin: 0 auto;
    margin-bottom: 20rpx; 
    font-weight: 500
}
.service-box {
    background-color: #ffffff;
    margin-top: 20rpx;
    padding: 20rpx 24rpx;
    display: flex;
    flex-direction: row;
}
.service-box view, .my-order {
    display: flex;
    flex-direction: column;
}
.me-title {
    font-weight: 700;
    font-size: 30rpx;
}
.my-order {
    background-color: #ffffff;
    margin-top: 20rpx;
    padding: 20rpx 24rpx;
}
.all-order {
    line-height: 70rpx;
    border-bottom: 1px solid #f2f2f2;
    position: relative;
}
.all-order .view-order {
    position: absolute;
    right: 0;
    display: flex;
    flex-direction: row;
    width: 24%;
}
.view-order image {
    margin-top: 20rpx;
    width: 30rpx;
    height: 30rpx;
    margin-right: 0;
}
.my-order view {
    display: flex;
    flex-direction: row;
}
.classify view {
    width: 33%;
    text-align: center; 
    line-height: 50rpx;
    padding-top: 20rpx;
    color: #4d4d4d;
    padding-left: 30rpx;
}
.my-info-list {
    background-color: #ffffff;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #f2f2f2;
}
.my-info-list image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 20rpx;
    right: 0;
}
.my-info-content {
    margin-top: 20rpx;
    padding: 0 24rpx; 
    background-color: #ffffff;
}
.add-groups {
    margin-top: 100rpx;
    display: block;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #ff3333;
    color: #ffffff;
    text-align: center;
}
.sign-out {
    margin-top: 40rpx;
    background-color: #ffffff;
    color: #4d4d4d;
    font-size: 30rpx;
}
.classify view image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
.most-right {
    margin-top: 20rpx; 
    margin-left: 20rpx;
    right: 0;
}
.my-info-list .arrow-right {
    width: 30rpx;
    height: 30rpx;
}